#
# LDAP Defaults
#
# See ldap.conf(5) for details
# This file should be world readable but not world writable.

SIZELIMIT      <%= scope['ldap::params::client_sizelimit'] %>
TIMELIMIT      <%= scope['ldap::params::client_timelimit'] %>
DEREF          <%= scope['ldap::params::client_deref'] %>

BASE <%= @base %>

<%- if ssl == 'true' -%>
URI <%= @uri.join(' ') %>
<%- end -%>

TLS_CACERTDIR /etc/openldap/cacerts
