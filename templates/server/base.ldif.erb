userPassword: <%= @readpw %>
<% end -%>

<% if @syncdn -%>
dn: <%= @syncdn %>,<%= @basedn %>
roleOccupant: <%= @basedn %>
objectClass: simpleSecurityObject
objectClass: organizationalRole
cn: <%= @syncdn.gsub!(/^..=/, '') %>
description: LDAP Sync
userPassword: <%= @syncpw %>
<% end -%>

