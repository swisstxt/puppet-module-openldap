dn: <%= @basedn %>
objectClass: top
objectClass: dcObject
objectClass: organization
o: <%= @name %>
dc: <%= @basedn[/^dc=([^,]+)/, 1] %>
description: <%= @name %>


<% if @readdn -%>
dn: <%= @readdn %>,<%= @basedn %>
roleOccupant: <%= @basedn %>
objectClass: simpleSecurityObject
objectClass: organizationalRole
cn: <%= @readdn.gsub!(/^..=/, '') %>
